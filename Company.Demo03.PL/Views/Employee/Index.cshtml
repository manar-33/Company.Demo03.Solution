
@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>

    


<form asp-action="Index">
    <div class="row m-5" >
        <div class="col-8">
            <input id="id" type="text" class="form-control" name="InputSearch">
        </div>
        <div class="col-2" >
            <input value="Search" type="submit" class="btn btn-success" />
        </div>
    </div>
    

    @* <span asp-validation-for="ToDictionary<Employee>" class="text-danger"></span> *@
</form>

