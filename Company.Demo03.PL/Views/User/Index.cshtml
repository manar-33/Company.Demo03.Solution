@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>

<form asp-action="Index">
    <div class="row m-5">
        <div class="col-8">
            <input id="id" type="text" class="form-control" name="InputSearch">
        </div>
        <div class="col-2">
            <input value="Search" type="submit" class="btn btn-success" />
        </div>
    </div>
</form>



@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.FirstName)</th>
                <th>@Html.DisplayNameFor(D => D.LastName)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                 <th>@Html.DisplayNameFor(D => D.Roles)</th> 
                 <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@string.Join(" ", user.Roles)</td> 
                

                    <partial name="_ButtonPartialView" model="@user.Id" />
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h4>There are no Users</h4>
    </div>
}


