@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>
<br />
<br />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <div class="form-group">
        <label asp-for="Code" class="col-form-label"></label>
        <br />
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <br />
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <br />
        <input asp-for="DateOfCreation" class="form-control" />
    </div>
    <br />
    <input class="btn btn-warning" type="submit" value="Save" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>


</form>

