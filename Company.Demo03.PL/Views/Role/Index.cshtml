@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>

<form asp-action="Index">
    <div class="row m-5">
        <div class="col-8">
            <input id="id" type="text" class="form-control" name="InputSearch">
        </div>
        <div class="col-2">
            <input value="Search" type="submit" class="btn btn-success" />
        </div>
    </div>
</form>


<a asp-action="Create" class="btn btn-primary">Create Role</a>
<br>
<br />





@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.RoleName)</th>
                
                 <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    
                    <td>@user.Id</td>
                    <td>@user.RoleName</td>
                    
                    
                

                    <partial name="_ButtonPartialView" model="@user.Id" />
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h4>There are no Roles</h4>
    </div>
}


